[user]
	name = Jose Bueno
	email = dev@jrbueno.com
[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow
  frag = magenta
  old = red
  new = green
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[init]
  defaultBranch = main
[merge]
  tool = vscode
[mergetool]
  prompt = false
  keepBackup = false
[diff]
  tool = vscode
[difftool]
  prompt = false
[core]
  autocrlf = input
  legacyheaders = false
	excludesfile = /Users/jrbueno/.gitignore
[repack]
  usedeltabaseoffset = true
[alias]
  ci = commit
  co = checkout
  st = status
  ch = cherry -v origin
  aa = add --all
  dc = diff --cached
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  la = !git l --all
  mt = mergetool
  mine = log --author=Jose
[github]
  user = jrbueno
  token = [GITHUB TOKEN HERE]
[push]
	default = simple
