{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "horizontal_offset": 0,
      "segments": [
        {
          "background": "#4cfe34",
          "foreground": "#262b44",
          "leading_diamond": "",
          "powerline_symbol": "",
          "properties": {
            "prefix": "  ",
            "style": "folder"
          },
          "style": "diamond",
          "trailing_diamond": "",
          "type": "path"
        },
        {
          "background": "#0077c2",
          "foreground": "#262b44",
          "powerline_symbol": "",
          "properties": {
            "ahead_and_behind_color": "#e43b44",
            "ahead_color": "#2ce8f5",
            "behind_color": "#f77622",
            "display_stash_count": true,
            "display_upstream_icon": true,
            "local_changes_color": "#f77622",
            "stash_count_icon": " ",
            "status_colors_enabled": true,
            "display_status": true,
            "display_stash_count": true,
            "display_upstream_icon": true            
          },
          "style": "powerline",          
          "type": "git"
        }
